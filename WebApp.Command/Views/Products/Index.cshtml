@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>
<p>
    <a class="btn btn-primary" asp-controller="Products" asp-action="CreateFile" asp-route-type="@((int)EFileType.Excel)">Create Excel</a>
    <a class="btn btn-primary" asp-controller="Products" asp-action="CreateFile" asp-route-type="@((int)EFileType.Pdf)">Create PDF</a>
    <a class="btn btn-primary" asp-controller="Products" asp-action="CreateFiles">Create Excel and PDF</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
        </tr>
    }
    </tbody>
</table>